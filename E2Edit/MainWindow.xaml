<Window x:Class="E2Edit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ae="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ad:DockingManager>
            <ad:ResizingPanel>
                <ad:DockablePane ad:ResizingPanel.ResizeWidth="200">
                    <ad:DockableContent Title="Files">
                        <ListView Name="_fileList" MouseDoubleClick="FileListMouseDoubleClick" />
                    </ad:DockableContent>
                </ad:DockablePane>
                <ad:DocumentPane Name="_docPane">
                </ad:DocumentPane>
            </ad:ResizingPanel>
        </ad:DockingManager>
    </Grid>
</Window>
